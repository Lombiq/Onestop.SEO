@model Onestop.Seo.Models.SeoGlobalSettingsPart

<fieldset>
    <legend>@T("Homepage Settings")</legend>
    <ol>
        <li>
            @Html.LabelFor(m => m.HomeTitle, T("Home Title"))
            @Html.TextBoxFor(m => m.HomeTitle, new { @class = "text large" })
            @Html.ValidationMessageFor(m => m.HomeTitle)
        </li>
        <li>
            @Html.LabelFor(m => m.HomeDescription, T("Home Description"))
            @Html.TextBoxFor(m => m.HomeDescription, new { @class = "text large" })
            @Html.ValidationMessageFor(m => m.HomeDescription)
        </li>
        <li>
            @Html.LabelFor(m => m.HomeKeywords, T("Home Keywords"))
            @Html.TextBoxFor(m => m.HomeKeywords, new { @class = "text large" })
            @Html.ValidationMessageFor(m => m.HomeKeywords)
            <span class="hint">@T("List keywords comma-separated.")</span>
        </li>
    </ol>
</fieldset>

<fieldset>
    <legend>@T("Title Formats")</legend>
    <ol>
    @{ var i = 0; }
    @foreach (var type in Model.SeoContentTypes) {
        <li>
            @Html.Label("TitlePatternsViewDictionary[" + i + "].Value", type.DisplayName)
            @Html.Hidden("TitlePatternsViewDictionary[" + i + "].Key", type.Name)
            @Html.TextBox("TitlePatternsViewDictionary[" + i + "].Value", Model.TitlePatternsViewDictionary[type.Name], new { @class = "text large tokenized" })
        </li>
        i++;
    }
        <li>
            @Html.LabelFor(m => m.SearchTitlePattern, T("Search"))
            @Html.TextBoxFor(m => m.SearchTitlePattern, new { @class = "text large tokenized" })
            @Html.ValidationMessageFor(m => m.SearchTitlePattern)
        </li>
        <li>
            @Html.LabelFor(m => m.ProductTitlePattern, T("Product"))
            @Html.TextBoxFor(m => m.ProductTitlePattern, new { @class = "text large tokenized" })
            @Html.ValidationMessageFor(m => m.ProductTitlePattern)
        </li>
        <li>
            @Html.LabelFor(m => m.ProductCategoryTitlePattern , T("Product Category"))
            @Html.TextBoxFor(m => m.ProductCategoryTitlePattern, new { @class = "text large tokenized" })
            @Html.ValidationMessageFor(m => m.ProductCategoryTitlePattern)
        </li>
    </ol>
</fieldset>

<fieldset>
    <legend>@T("Other Settings")</legend>
    <ol>
        <li>
            @Html.EditorFor(m => m.EnableCanonicalUrls)
            <label for="@Html.FieldIdFor(m => m.EnableCanonicalUrls)" class="forcheckbox">@T("Enable Canonical URLs")</label>
            @Html.ValidationMessageFor(m => m.EnableCanonicalUrls)
        </li>
        <li>
            @Html.EditorFor(m => m.UseCategoriesForKeywords)
            <label for="@Html.FieldIdFor(m => m.UseCategoriesForKeywords)" class="forcheckbox">@T("Use Categories for META keywords")</label>
            @Html.ValidationMessageFor(m => m.UseCategoriesForKeywords)
        </li>
        <li>
            @Html.EditorFor(m => m.AutogenerateDescriptions)
            <label for="@Html.FieldIdFor(m => m.AutogenerateDescriptions)" class="forcheckbox">@T("Autogenerate Descriptions")</label>
            @Html.ValidationMessageFor(m => m.AutogenerateDescriptions)
        </li>
    </ol>
</fieldset>

@Display.TokenHint()