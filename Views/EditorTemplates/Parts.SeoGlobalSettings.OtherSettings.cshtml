@model Onestop.Seo.Models.SeoGlobalSettingsPart

<h2>@T("Other Settings")</h2>
<fieldset>
    <legend>@T("Automatisms")</legend>
    <ol>
        <li>
            @Html.EditorFor(m => m.EnableCanonicalUrls)
            <label for="@Html.FieldIdFor(m => m.EnableCanonicalUrls)" class="forcheckbox">@T("Enable Canonical URLs")</label>
            @Html.ValidationMessageFor(m => m.EnableCanonicalUrls)
        </li>
        <li>
            @Html.EditorFor(m => m.UseCategoriesForKeywords)
            <label for="@Html.FieldIdFor(m => m.UseCategoriesForKeywords)" class="forcheckbox">@T("Use Categories for META keywords")</label>
            @Html.ValidationMessageFor(m => m.UseCategoriesForKeywords)
        </li>
        <li>
            @Html.EditorFor(m => m.AutogenerateDescriptions)
            <label for="@Html.FieldIdFor(m => m.AutogenerateDescriptions)" class="forcheckbox">@T("Autogenerate Descriptions")</label>
            @Html.ValidationMessageFor(m => m.AutogenerateDescriptions)
        </li>
    </ol>
</fieldset>

@Display.TokenHint()